{
    "version": 2,
    "builds": [
      {
        "src": "client/dist/**",
        "use": "@vercel/static"
      },
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "client/dist/index.html"
      }
    ],
    "installCommand": "cd client && npm install && npm run build && cd ../server && npm install",
    "buildCommand": "cd client && npm run build"
  }